<!DOCTYPE html>
<html>
<head>
  <title>My Pantry</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>My Pantry</h1>
  <a href="/users/<%= user._id %>/foods/new">Add New Item</a>
    <% if (pantry.length === 0) { %>
  <p>There are no items in this pantry.</p>
    <% } else { %>
  <ul>
    <% pantry.forEach(food => { %>
  <li>
    <%= food.name %>
  <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">Edit</a>
  <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="POST">
  <button>Delete</button>
  </form>
  </li>
    <% }) %>
  </ul>
    <% } %>
</body>
</html>
