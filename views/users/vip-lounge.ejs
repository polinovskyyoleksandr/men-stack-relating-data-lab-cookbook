<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1> Community Pantries</h1>
<%- include('../partials/_navbar.ejs') %>
<% if (user.length === 0) { %>
  <p>No users yet.</p>
<% } %>

<ul>
  <% user.forEach(user => { %>
      <h3><%= user.username %></h3>

      <% if (currentUser && currentUser._id === user._id.toString()) { %>
        <p>(This is you)</p>
      <% } %>

      <a href="/users/<%= user._id %>/foods">
        View Pantry
      </a>
    </li>
  <% }) %>
</ul>

</body>
</html>